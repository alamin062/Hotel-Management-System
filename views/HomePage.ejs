    <title>Home page</title>
    <style>
        * {
            margin: 0;
            padding: 0
        }

        body {
            font-family: sans-serif, Arial !important;
            -webkit-transition: all 0.5s ease;
            transition: all 0.5s ease;
        }

        a {
            text-decoration: none;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            font-weight: normal;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        p {
            line-height: 150%;
            margin-bottom: 2em;
        }

        .fix {
            overflow: hidden;
        }

        .container_full {
            width: 100%;
        }

        .container {
            width: 1280px;
            display: block;
            margin: 0 auto;
        }

        .bg_color {
            background: #292929;
        }

        .logo {
            float: left;
        }

        .logo h2 {
            font-family: lato;
            color: white;
            font-weight: bold;
            font-size: 40px;
            padding-top: 20px;
        }

        header nav {
            float: right;
        }

        header nav .menu {
            list-style: none;
        }

        header nav .menu li {
            float: left;
            border-right: 1px solid #1D1D1D;
        }

        header nav .menu li:first-child {
            border-left: 1px solid #1D1D1D;
        }

        header nav .menu li a {
            color: white;
            font-family: lato;
            font-weight: bold;
            font-size: 16px;
            display: block;
            padding: 50px 30px;
            border-bottom: 5px solid #1E1E1E;
        }

        header nav .menu li a:hover {
            border-bottom: 5px solid #6DD053;
            color: #6DD053;
        }

        header nav .menu li.active a {
            border-bottom: 5px solid #6DD053;
            color: #6DD053;
        }

        .content_wrapper {
            border-right: 1px solid #E1E0E0;
            border-left: 1px solid #E1E0E0;
            overflow: hidden;
            padding-top: 75px;
        }

        .slider_container img {
            height: 600px;
            width: 100%;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .title_container h2 {
            text-align: center;
        }

        .content_rooms {
            display: flex;
            width: 100%;
            margin-right: auto;
            margin-top: 50px;
        }

        .content_rooms .image_container {
            height: 400px;
            width: 400px;
            position: relative;
        }

        .content_rooms .img1 {
            margin-left: 0;
            margin-right: 20px;
        }

        .content_rooms .img2 {
            margin-left: 20px;
            margin-right: 20px;
        }

        .content_rooms .img3 {
            margin-left: 20px;
            margin-right: 0;
        }

        .content_rooms .image_container img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .our_services {
            text-align: center;
            display: block;
        }

        .services .service_container {
            position: relative;
            height: 400px;
            width: 300px;
            margin: 20px;
        }

        .services .service_container img {
            height: 50px;
            width: 50px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .services .service_container h3 {
            text-align: center;
            font: bold;
        }

        .services .service_container p {
            text-align: center;
        }

        .services {
            display: flex;

        }

        .bg_footer {
            background: #D2D2D2;
        }

        footer {
            text-align: center;
            padding-top: 60px;
            padding-bottom: 60px;
            ;
        }

        footer h1 {
            font-family: lato;
            font-weight: bold;
            font-size: 40px;
            color: #292929;
        }

        footer p {
            font-family: lato;
            font-weight: regular;
            font-size: 13px;
            color: #a6a6a6;
        }

        footer .social_area ul {
            list-style: none;
        }

        footer .social_area ul li {
            display: inline-block;
            margin: 0 10px;
        }

        footer .social_area ul li.facebook a {
            display: block;
            height: 40px;
            width: 40px;
            background: url(images/facebook.png) no-repeat;
        }

        footer .social_area ul li.facebook:hover a {
            display: block;
            height: 40px;
            width: 40px;
            background: url(images/search_icon.png) no-repeat;
        }
        
