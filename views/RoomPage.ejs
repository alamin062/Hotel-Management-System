                    <form action="/room1/<%= data[4]._id %>" method="post" id="/room1">
                        <button type="submit">Book Now</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="sideber_container">
            <div class="summery">
                <h2>Booking Summary</h2>
            </div><br>
            <h3>Cheak In</h3>
            <input type="date" placeholder="  12/12/21">
            <h3>Cheak Out</h3>
            <input type="date" placeholder="  13/12/21">
            <h3>Guests</h3>
            <select >
                <option value="volvo">Guest_1</option>
